{% extends 'base.html.twig' %}

{% block title %}
    Nous contacter
{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="well">
        <div class="container">
            {{ form_start(contactForm) }}

            <div class="form-group">
                {{ form_row(contactForm.name) }}
            </div>
            <div class="form-group">
                {{ form_row(contactForm.email) }}
            </div>
            <div class="form-group">
                {{ form_row(contactForm.obj) }}
            </div>
            <div class="form-group">
                {{ form_row(contactForm.msg) }}
            </div>
            <div class="form-group text-right">
                {{ form_row(contactForm.send) }}
            </div>

            {{ form_end(contactForm) }}
        </div>
    </div>
{% endblock %}